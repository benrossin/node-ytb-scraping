{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@common/*": ["modules/common/*"],
      "@modules/*": ["modules/*"]
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["**/*.ts", "src"],
  "exclude": ["node_modules", ".vscode", "dist"]
}
